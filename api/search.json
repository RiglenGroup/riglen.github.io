---
layout: none
---
{%- assign content = site.posts %}
{%- assign content = content | concat: site.data.categories %}
{%- assign content = content | concat: site.solutions %}
{%- assign content = content | concat: site.services %}
{%- assign content = content | concat: site.trainings %}
{
  "count": "{{ content.size }}",
  "data": [
    {%- for post in content %}
    {
      "date"        : {{ post.date | jsonify }},
      "description" : "{{ post.description | markdownify | strip_newlines }}",
      "slug"        : {{ post.slug | jsonify }},
      "title"       : {{ post.title | jsonify }},
      "type"        : {{ post.type | jsonify }},
      "url"         : {{ post.url | relative_url | jsonify }}
    }{% unless forloop.last %},{% endunless %}
    {%- endfor %}
  ]
}
